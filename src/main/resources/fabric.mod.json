{
  "schemaVersion": 1,
  "id": "lycanthropy",
  "version": "${version}",

  "name": "Lycanthropy",
  "description": "Channel your inner beast and unleash the Werewolf",
  "authors": [
    "ZestyBlaze, MrSterner"
  ],

  "contact": {
    "homepage": "",
    "sources": "https://github.com/ZestyBlaze/Lycanthropy",
    "issues": "https://github.com/ZestyBlaze/Lycanthropy/issues"
  },

  "license": "MIT License",
  "icon": "assets/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.zestyblaze.lycanthropy.Lycanthropy"
    ],
    "client": [
      "net.zestyblaze.lycanthropy.client.LycanthropyClient"
    ],
    "cardinal-components-entity": [
      "net.zestyblaze.lycanthropy.common.registry.LycanthropyComponentInit"
    ],
    "modmenu": [
      "net.zestyblaze.lycanthropy.client.integration.ModMenuIntegration"
    ],
    "appleskin": [
      "net.zestyblaze.lycanthropy.client.integration.AppleskinIntegration"
    ]
  },
  "mixins": [
    "lycanthropy.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17",
    "cloth-config2": ">=6.1.48",
    "patchouli": ">=1.18-61",
    "pehkui": ">=3.0.0"
  },
  "custom": {
    "cardinal-components": [
      "lycanthropy:werewolf",
      "lycanthropy:werewolf_hunger",
      "lycanthropy:werewolf_rage"
    ]
  },
  "accessWidener": "lycanthropy.accesswiderner"
}
